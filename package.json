{
    "name": "angular-file-creator",
    "displayName": "Angular File Creator",
    "description": "Creates base files for Angular components, directives, and tests",
    "version": "1.0.1",
    "publisher": "jaketyler781",
    "repository": {
        "type": "git",
        "url": "https://github.com/jaketyler781/vscode-angular-file-creator"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other",
        "Testing"
    ],
    "keywords": [
        "Angular",
        "TypeScript",
        "template",
        "create",
        "test"
    ],
    "activationEvents": [
        "onCommand:extension.angularFileCreator.create-component",
        "onCommand:extension.angularFileCreator.create-directive",
        "onCommand:extension.angularFileCreator.create-unit-test",
        "onCommand:extension.angularFileCreator.create-harness"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.angularFileCreator.create-component",
                    "group": "1_modification",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "extension.angularFileCreator.create-directive",
                    "group": "1_modification",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "extension.angularFileCreator.create-unit-test",
                    "group": "1_modification",
                    "when": "resourceExtname == .ts && resourceFilename =~ /^((?!(spec|module|test|mock)).)*$/"
                },
                {
                    "command": "extension.angularFileCreator.create-harness",
                    "group": "1_modification",
                    "when": "resourceFilename =~ /.*\\.component\\..*/"
                }
            ],
            "commandPalette": [
                {
                    "command": "extension.angularFileCreator.create-unit-test",
                    "when": "resourceExtname == .ts && resourceFilename =~ /^((?!(spec|module|test|mock)).)*$/"
                },
                {
                    "command": "extension.angularFileCreator.create-harness",
                    "when": "resourceFilename =~ /.*\\.component\\..*/"
                },
                {
                    "command": "extension.angularFileCreator.create-component",
                    "when": "false"
                },
                {
                    "command": "extension.angularFileCreator.create-directive",
                    "when": "false"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.angularFileCreator.create-component",
                "title": "Create angular component"
            },
            {
                "command": "extension.angularFileCreator.create-directive",
                "title": "Create angular directive"
            },
            {
                "command": "extension.angularFileCreator.create-unit-test",
                "title": "Create unit test"
            },
            {
                "command": "extension.angularFileCreator.create-harness",
                "title": "Create harness"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Angular File Creator Configuration",
            "properties": {
                "extension.angularFileCreator.prefix": {
                    "type": "string",
                    "default": "lucid",
                    "description": "Specifies a prefix to add to selectors and names of components and directives created"
                },
                "extension.angularFileCreator.harnessTemplate.dynamic": {
                    "type": "string",
                    "description": "A template for components with dynamic content (e.g. ng-content)",
                    "default": "cake/app/webroot/ts/testing/templates/ngcontenttest.component.test.ts"
                },
                "extension.angularFileCreator.harnessTemplate.static": {
                    "type": "string",
                    "description": "A template for components with static content",
                    "default": "cake/app/webroot/ts/testing/templates/test.component.test.ts"
                },
                "extension.angularFileCreator.unitTestTemplates": {
                    "type": "object",
                    "markdownDescription": "Provide template unit test files when creating unit tests for TypeScript files that contain the item regex (e.g. `\"@SomeDecorator\": \"src/test/somedecorator.template.spec.ts\"`)",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.14.2",
        "@types/vscode": "^1.90.0",
        "@typescript-eslint/eslint-plugin": "^7.12.0",
        "@typescript-eslint/parser": "^7.12.0",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.56.0",
        "glob": "^10.4.1",
        "mocha": "^10.4.0",
        "prettier": "^3.3.1",
        "source-map-support": "^0.5.12",
        "typescript": "^5.4.5"
    }
}
